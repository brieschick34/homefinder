extends layout

block mainbody
  #mainbody
    h3 Home Loan Amortization Report Tool
    section.input
      h2 Input 
      p Fill out the follow fields to start using the Home Loan Amortization Report Tool!
      form(id="amortization")
        p Loan Principal:
        input(type="text", id="principal", value="", placeholder="")
        br
        p Extra Monthly Payment
        input(type="text", id="extraPayment", value="", placeholder="")
        br
        p Monthly Mortgage Amount
        input(type="text", id="mortgageAmount", value="", placeholder="")
        br
        p Interest Rate
        input(type="text", id="interestRate", value="", placeholder="")
        br 
        br
        button(type="submit" id="aSubmit" onclick="generateAmortizationReport();") Run!
    section.forsaleitems
      table
        tr
          th Payment Number
          th Payment Amount
          th Interest Amount
          th Principal
          th Remaining Balance
        tr
          th 1
          th 2000
          th 1000
          th 140000
          th 139000